<div class="container">
  <h2 class="text-center">Let's play a game!</h2>

  <div class="card my-4 p-3">
    <ul class="list-inline text-center mb-O">
      <% @letters.each do |letter| %>
        <li class="list-inline-item mx-3 list-group-item-primary border p-4 "><%= letter %></li>
      <% end %>
    </ul>
  </div>

  <div>
    <form action="score" method="POST" data-turbo="false">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <label for="word">What is the longest word you can find?</label>
      <br>
      <input type="text" name="word">
      <input type="submit" value='play' class='btn btn-light'>
      <%= hidden_field_tag :letters, @letters %>
    </form>
  </div>
</div>
